---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <% if i == 0  %>
     <h2>current → <%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
  <% elsif i == 1 %>
    <h2>older ↓ <%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
  <% else %>
    <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
